{
  "compilerOptions": {
    "target": "ES2018",
    "module": "ESNext",
    "lib": [
      "dom",
      "es2016"
    ],
    "outDir": "dist",
    "rootDir": "lib",
    "strict": true,
    "verbatimModuleSyntax": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "baseUrl": ".",
    "moduleResolution": "node"
  },
  "include": [
    "lib/**/*.ts",
    "lib/helper/**/*.ts",
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "test",
    "examples"
  ]
}